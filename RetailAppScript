CREATE TABLE [dbo].[Products](
	[ProductId] [int] IDENTITY(1,1) NOT NULL,
	[Name] [nvarchar](100) NOT NULL,
	[Price] [decimal](18, 2) NOT NULL,
	[Status] [bit] NOT NULL,
	[PostedDate] [datetime] NOT NULL,
PRIMARY KEY CLUSTERED 
(
	[ProductId] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO
ALTER TABLE [dbo].[ApprovalQueue]  WITH CHECK ADD  CONSTRAINT [FK_ApprovalQueue_Product] FOREIGN KEY([ProductId])
REFERENCES [dbo].[Products] ([ProductId])
ON DELETE CASCADE
GO
ALTER TABLE [dbo].[ApprovalQueue] CHECK CONSTRAINT [FK_ApprovalQueue_Product]
GO
/****** Object:  StoredProcedure [dbo].[UpdateProductWithApproval]    Script Date: 12-08-2023 10:10:44 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
CREATE PROCEDURE [dbo].[UpdateProductWithApproval]
    @ProductId INT,
    @Name NVARCHAR(255),
    @Price DECIMAL(18, 2),
    @Status BIT
AS
BEGIN
    DECLARE @PreviousPrice DECIMAL(18, 2)
    SELECT @PreviousPrice = Price FROM Products WHERE ProductId = @ProductId

    IF @Price > @PreviousPrice * 1.5
        INSERT INTO ApprovalQueue (ProductId, RequestDate) VALUES (@ProductId, GETUTCDATE())
    ELSE
    BEGIN
        UPDATE Products
        SET Name = @Name,
            Price = @Price,
            Status = @Status
        WHERE ProductId = @ProductId
    END
	return 1
END
GO
